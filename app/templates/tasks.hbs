<h4 class="text-center">Track time spent on each task</h4>

<div class="row display-75">
    <form class="display-75">
        <div class="col-md-12">
            <div class="input-group">
                {{input value=newTaskTitle class='form-control' placeholder='Task Name' maxlength=50}}
                <span class="input-group-btn">
                    <button class='btn btn-primary' {{action 'createTask'}} disabled={{canDisable}}>Create Task</button>
                </span>
            </div>
        </div>
    </form>
</div>

<div class="row display-75">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        {{#if isEmptyModel}}
            <div class="text-center">Create a Task</div>
        {{else}}
            {{tasks-table model=model}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
